<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:fontFamily="cursive"
        android:id="@+id/text_view_hubungi">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:id="@+id/cardview_hubungi_ig"
        android:layout_marginTop="150dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_below="@+id/text_view_hubungi">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/gambar_ig"
            android:src="@drawable/vecteezy_instagram_icon_logo_symbol_24170870_549">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textig"
            android:textStyle="bold"
            android:text="Instagram"
            android:gravity="center"
            android:fontFamily="serif"
            android:textSize="30sp">
        </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/cardview_hubungi_email"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/cardview_hubungi_ig">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/gambar_email"
                android:src="@drawable/vecteezy_google_mail_gmail_icon_logo_symbol_22484516_581">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textgmail"
                android:textStyle="bold"
                android:text="Gmail"
                android:gravity="center"
                android:fontFamily="serif"
                android:textSize="30sp">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/cardview_hubungi_wa"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/cardview_hubungi_email">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/gambar_wa"
                android:src="@drawable/mobile_phones_telephone_call_whatsapp_google_contacts_contact_ef7b195d1e2c83b4006bdf1705c87f77">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textwa"
                android:textStyle="bold"
                android:text="WhatsApp"
                android:gravity="center"
                android:fontFamily="serif"
                android:textSize="30sp">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>