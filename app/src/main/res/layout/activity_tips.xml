<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/judultips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Tips and Trick"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:fontFamily="cursive"
            android:textColor="@color/black"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="169dp"
            android:layout_height="145dp"
            android:layout_below="@+id/judultips"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="50dp"
            android:id="@+id/cardview_bayirewel">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_view_bayirewel"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/rewel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bayi Rewel"
                    android:textSize="18dp"
                    android:fontFamily="serif"
                    android:id="@+id/text_view_bayirewel"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="169dp"
            android:layout_height="145dp"
            android:layout_centerHorizontal="false"
            android:layout_toEndOf="@+id/cardview_bayirewel"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/judultips"
            android:id="@+id/demam">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/demam"
                    android:id="@+id/image_view_demam"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Demam"
                    android:textSize="20dp"
                    android:fontFamily="serif"
                    android:id="@+id/text_view_demam"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="169dp"
            android:layout_height="145dp"
            android:layout_centerHorizontal="false"
            android:layout_below="@id/cardview_bayirewel"
            android:layout_marginTop="50dp"
            android:id="@+id/card_view_kembung">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kembung"
                    android:id="@+id/image_view_kembung"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Kembung"
                    android:textSize="20dp"
                    android:fontFamily="serif"
                    android:id="@+id/text_view_kembung"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_ruam"
            android:layout_width="169dp"
            android:layout_height="145dp"
            android:layout_below="@+id/demam"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/card_view_kembung">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_view_ruam"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ruam" />

                <TextView
                    android:id="@+id/text_view_ruam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:text="Ruam"
                    android:textSize="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_tidur"
            android:layout_width="169dp"
            android:layout_height="145dp"
            android:layout_below="@+id/card_view_kembung"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_view_tidur"
                    android:layout_width="170dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/susahtidur" />

                <TextView
                    android:id="@+id/text_view_tidur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="serif"
                    android:text="Susah Tidur"
                    android:textSize="20dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnbackawal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_tidur"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="31dp"
            android:backgroundTint="#2196F3"
            android:layout_centerHorizontal="true"
            android:text="BACK TO MENU" />

    </RelativeLayout>
</ScrollView>